---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Button from "./Button.astro";

const CURRENT_YEAR = new Date().getFullYear();
const FIGMA_LINK =
  "https://www.figma.com/proto/eIwPqCDbxSF5soH8jIKgob/Untitled?node-id=176-117&t=KDC9krjsmPYtiNpp-0&scaling=scale-down&content-scaling=fixed&page-id=0%3A1";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer
  class="bg-gradient-to-b from-[#1a1a1a] to-[#0f0f0f] mt-28 text-gray-300 pt-12 pb-6 px-4 sm:px-6 md:mt-44 lg:px-8"
>
  <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12">
    <div>
      <h3 class="text-center text-3xl text-blue-50 font-bold mb-2 md:text-left">
        Matías Medina
      </h3>
      <p class="text-center text-base text-pretty md:max-w-md md:text-left">
        {t("footer.self-description")}
      </p>
    </div>
    <div class="space-y-6">
      <div
        class="bg-gradient-to-br from-[#2a2a2a] to-[#3a3a3a] rounded-lg p-6 shadow-lg border border-[#4a4a4a] hover:border-[#5a5a5a] transition-all duration-300 group"
      >
        <div
          class="flex items-center gap-3 mb-4 justify-center md:justify-start"
        >
          <svg
            fill="#a259ff"
            class="size-6"
            viewBox="0 0 24 24"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M15.852 8.981h-4.588V0h4.588c2.476 0 4.49 2.014 4.49 4.49s-2.014 4.491-4.49 4.491zM12.735 7.51h3.117c1.665 0 3.019-1.355 3.019-3.019s-1.355-3.019-3.019-3.019h-3.117V7.51zm0 1.471H8.148c-2.476 0-4.49-2.014-4.49-4.49S5.672 0 8.148 0h4.588v8.981zm-4.587-7.51c-1.665 0-3.019 1.355-3.019 3.019s1.354 3.02 3.019 3.02h3.117V1.471H8.148zm4.587 15.019H8.148c-2.476 0-4.49-2.014-4.49-4.49s2.014-4.49 4.49-4.49h4.588v8.98zM8.148 8.981c-1.665 0-3.019 1.355-3.019 3.019s1.355 3.019 3.019 3.019h3.117V8.981H8.148zM8.172 24c-2.489 0-4.515-2.014-4.515-4.49s2.014-4.49 4.49-4.49h4.588v4.441c0 2.503-2.047 4.539-4.563 4.539zm-.024-7.51a3.023 3.023 0 0 0-3.019 3.019c0 1.665 1.365 3.019 3.044 3.019 1.705 0 3.093-1.376 3.093-3.068v-2.97H8.148zm7.704 0h-.098c-2.476 0-4.49-2.014-4.49-4.49s2.014-4.49 4.49-4.49h.098c2.476 0 4.49 2.014 4.49 4.49s-2.014 4.49-4.49 4.49zm-.097-7.509c-1.665 0-3.019 1.355-3.019 3.019s1.355 3.019 3.019 3.019h.098c1.665 0 3.019-1.355 3.019-3.019s-1.355-3.019-3.019-3.019h-.098z"
            ></path></svg
          >
          <span class="text-xl text-blue-50 font-semibold"
            >{t("footer.figma-title")}</span
          >
        </div>
        <p class="mb-5 text-center text-pretty md:text-left">
          {t("footer.figma-description")}
        </p>
        <Button
          href={FIGMA_LINK}
          classStyles="w-full py-3 justify-center md:justify-start md:py-2 md:w-fit"
        >
          {t("footer.figma-button-text")}
          <svg
            fill="none"
            class="w-5 h-5 ml-2 text-blue-50"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            ></path>
          </svg>
        </Button>
      </div>
    </div>
  </div>
  <div class="mt-12 pt-4 border-t border-gray-800 text-center">
    <p class="text-base text-gray-600 my-4">
      © {CURRENT_YEAR}
      {t("footer.copyright")}
    </p>
    <a
      href="https://github.com/matias-mg/landing"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-2 text-sm text-gray-600 transition-colors hover:text-blue-600 m-auto w-fit leading-none"
    >
      <img
        src="/icons/github-icon.svg"
        alt="github logo"
        loading="lazy"
        class="size-6"
      />
      {t("footer.built-with")}
    </a>
  </div>
</footer>
