---
import BaseJobExperienceContainer from "./BaseJobExperienceContainer.astro";
import ImageComparisonSlider from "./ImageComparisonSlider.astro";

const {
    right = true,
    jobTitle,
    company,
    from,
    to,
    description,
    techList,
    leftImage,
    rightImage,
    leftImageSrc,
    rightImageSrc,
    loading,
    leftImageAlt,
    rightImageAlt,
} = Astro.props;
---

<BaseJobExperienceContainer
    right={right}
    jobTitle={jobTitle}
    company={company}
    from={from}
    to={to}
    description={description}
    techList={techList}
>
    <ImageComparisonSlider
        id={leftImageSrc}
        leftImage={leftImage}
        rightImage={rightImage}
        leftImageSrc={leftImageSrc}
        rightImageSrc={rightImageSrc}
        loading={loading}
        leftImageAlt={leftImageAlt}
        rightImageAlt={rightImageAlt}
    />
</BaseJobExperienceContainer>
